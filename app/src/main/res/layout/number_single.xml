<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="@color/teal_200"
        />
    <TextView
        android:id="@+id/number_username_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="账号:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/space"
        />
    <TextView
        android:id="@+id/number_username_edit"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@+id/space"
        android:layout_toRightOf="@+id/number_username_text"
        />
    <TextView
        android:id="@+id/number_called_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="称谓:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_username_text"
        />
    <TextView
        android:id="@+id/number_called_edit"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_username_text"
        android:layout_toRightOf="@id/number_called_text"
        />
</RelativeLayout>
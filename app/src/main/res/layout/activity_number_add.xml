<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    tools:context=".NumberAdd"
    android:layout_marginTop="280dp">
    <TextView
        android:id="@+id/number_down_name_text"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="用户名:"
        android:textSize="30sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/number_down_name_edit_unable"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/number_down_name_text"
        />
    <EditText
        android:id="@+id/number_down_name_edit"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/number_down_name_text"
        />
    <TextView
        android:id="@+id/number_called_text"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="称谓:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_down_name_text"
        />
    <TextView
        android:id="@+id/number_called_edit_unable"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_down_name_text"
        android:layout_toRightOf="@id/number_called_text"
        />
    <EditText
        android:id="@+id/number_called_edit"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_down_name_text"
        android:layout_toRightOf="@id/number_called_text"
        />
    <TextView
        android:id="@+id/number_password_text"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="密码:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_called_text"
        />
    <EditText
        android:id="@+id/number_password_edit"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_called_text"
        android:layout_toRightOf="@id/number_password_text"
        />
    <Button
        android:id="@+id/number_add_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="添加"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_password_text"
        />
    <Button
        android:id="@+id/number_delete_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="删除"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_password_text"
        />

    <Button
        android:id="@+id/number_back_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="取消"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/number_password_text"
        android:layout_toRightOf="@id/number_add_button"
        />

</RelativeLayout>
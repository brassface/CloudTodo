<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="设置"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/set_username_text"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="用户名:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/set_username_edit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/set_username_text"
        />
    <Button
        android:id="@+id/set_repassword_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="修改密码"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="300dp"
        />
    <Button
        android:id="@+id/set_about_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="关于"
        android:textSize="30sp"
        android:layout_below="@id/set_repassword_button"
        />
    <Button
        android:id="@+id/set_close_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="关闭"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/set_about_button"
        />
</RelativeLayout>
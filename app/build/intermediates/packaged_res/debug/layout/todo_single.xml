<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="#0f0"
        />
    <TextView
        android:id="@+id/todo_title_text"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="事件:"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/todo_title_edit"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/todo_title_text"
        />
    <TextView
        android:id="@+id/todo_time_text"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="时间:"
        android:layout_below="@id/todo_title_text"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/todo_month_edit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_time_text"
        />
    <TextView
        android:id="@+id/todo_month_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="月"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_month_edit"
        />
    <TextView
        android:id="@+id/todo_day_edit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_month_text"
        />
    <TextView
        android:id="@+id/todo_day_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="日"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_day_edit"
        />
    <TextView
        android:id="@+id/todo_hour_edit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_day_text"
        />
    <TextView
        android:id="@+id/todo_hour_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="时"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_hour_edit"
        />
    <TextView
        android:id="@+id/todo_minute_edit"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_hour_text"
        />
    <TextView
        android:id="@+id/todo_minute_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="分"
        android:layout_below="@id/todo_title_text"
        android:layout_toRightOf="@id/todo_minute_edit"
        />
    <TextView
        android:id="@+id/todo_place_text"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="地点:"
        android:layout_below="@id/todo_time_text"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/todo_place_edit"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_time_text"
        android:layout_toRightOf="@id/todo_place_text"
        />
    <TextView
        android:id="@+id/todo_from_text"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="来自:"
        android:layout_below="@id/todo_place_text"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/todo_from_edit"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_below="@id/todo_place_text"
        android:layout_toRightOf="@id/todo_from_text"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    tools:context=".RePassword"
    android:layout_marginTop="250dp">

    <TextView
        android:id="@+id/repassword_old_text"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="原密码:"
        android:textSize="30sp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/repassword_old_edit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@id/repassword_old_text"
        />
    <TextView
        android:id="@+id/repassword_new_text"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="新密码:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/repassword_old_text"
        />
    <EditText
        android:id="@+id/repassword_new_edit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@id/repassword_new_text"
        android:layout_below="@id/repassword_old_text"
        />
    <TextView
        android:id="@+id/repassword_new2_text"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="再次输入:"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/repassword_new_text"
        />
    <EditText
        android:id="@+id/repassword_new2_edit"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@id/repassword_new2_text"
        android:layout_below="@id/repassword_new_text"
        />
    <Button
        android:id="@+id/repassword_yes_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="修改"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_below="@id/repassword_new2_text"
        />
    <Button
        android:id="@+id/repassword_no_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="返回"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_toRightOf="@id/repassword_yes_button"
        android:layout_below="@id/repassword_new2_text"
        />
</RelativeLayout>